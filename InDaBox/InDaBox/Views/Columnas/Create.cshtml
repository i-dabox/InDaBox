@model InDaBox.Models.Columna

@{
    ViewData["Title"] = "Create";
}

<h4>Columna</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeccionId" class="control-label">Numero de Secciones</label>
                <select asp-for="SeccionId" class ="form-control" asp-items="ViewBag.SeccionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primónry" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
