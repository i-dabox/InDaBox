        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Disco">Disco Duro</a></li>
        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Procesador">Procesador</a></li>
        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Dron">Dron</a></li>
        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Ram">Memoria Ram</a></li>
        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Surface">Microsoft surface</a></li>
        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Iphone">Iphone</a></li>
        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Ryzen7">Ryzen7</a></li>
        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Lg G5">Lg G5</a></li>
        <li><a class="anclaLateral" asp-controller="Productos" asp-action="Index" asp-route-busqueda="Corsair">Corsair</a></li>
