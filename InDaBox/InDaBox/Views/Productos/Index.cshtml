@model IEnumerable<InDaBox.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutProducto";
}
<link rel="stylesheet" href="~/css/menuLateral.css">

<div class="row">


    <aside class="container-menu col-3">
        <h1 class="btn-almacen">
            <a asp-controller="Almacenes" asp-action="Index">Almacenes</a>
        </h1>
        <form asp-controller="Productos" asp-action="Index" method="post">
            <div class="col-lg-12">
                <div class="input-group">
                    <input type="text" class="form-control" name="busqueda">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit" style="color:white">Buscar</button>
                    </span>
                </div>
            </div>

        </form>
        <h1>
            <a href="#" class="btn-busqueda">Busquedas frecuentes</a>
        </h1>
        <hr />

        <ul class="menu">
            <ul class="guardados">
                <li><a href="#">Item 1 </a></li>
                <li><a href="#">Item 2 </a></li>
                <li><a href="#">Item 3 </a></li>
                <li><a href="#">Item 4 </a></li>
                <li><a href="#">Item 5 </a></li>
                <li><a href="#">Item 6 </a></li>
                <li><a href="#">Item 7 </a></li>
                <li><a href="#">Item 8 </a></li>
                <li><a href="#">Item 9 </a></li>
                <li><a href="#">Item 10 </a></li>
            </ul>
        </ul>
        <p class="createNew">
            <a asp-action="Create"><i class="icono izquierda fas fa-plus"></i>Añadir producto</a>
        </p>
    </aside>
    <div class="col">
        <div class="row">
            <div class="titulo">
                <h1>Productos</h1>
            </div>
        </div>
        <div class="row productosMuestra">
            @foreach (Producto producto in Model)
            {
                <div class="col-3 pb-4">
                    <div class="card">
                        <img class="card-img-top " src=@Url.Content(producto.Imagen)>
                        <div class="card-body">
                            <h4 class="card-title">@producto.Nombre</h4>
                            @if (producto.Localizaciones.Count != 0)
                            {
                                @foreach (Localizacion localizacion in producto.Localizaciones)
                                {
                                    <h4 class="card-title">@localizacion.Fila.Nombre </h4>
                                }
                            }
                            else
                            {
                                <a asp-controller="Localizaciones" asp-action="Create">Insertar Localizacion</a>
                            }

                        </div>
                        <div>

                            <a asp-action="Edit" asp-route-id="@producto.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@producto.Id">Delete</a>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

