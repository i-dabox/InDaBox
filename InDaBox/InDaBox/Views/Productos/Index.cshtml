<div class="row productosMuestra">
    @foreach (Producto producto in Model)
    {
        <div class="col-3 pb-4">
            <div class="card">
                <img class="card-img-top" src=@Url.Content(producto.Imagen)>
                <div class="card-body">
                    <h4 class="card-title">Nombre=@producto.Nombre</h4>
                    @if (producto.Localizaciones.Count != 0)
                    {
                        @foreach (Localizacion localizacion in producto.Localizaciones)
                        {
                            <h4 class="card-title">localizacion=@localizacion.Fila.Nombre </h4>
                        }
                    }
                    else
                    {
                        <a asp-controller="Localizaciones" asp-action="Create">Insertar Localizacion</a>
                    }
                </div>
                <div>
                    <!-- Button trigger modal -->
                    <a class="btn BotonEditar" id="@producto.Id" data-toggle="modal" data-target="#edit">Editar</a>
                    @*<a asp-action="Edit" asp-route-id="@producto.Id">Edit</a>*@ |
                    <a class="btn BotonBorrar" id="@producto.Id" data-toggle="modal" data-target="#delete">Borrar</a>
                    @*<a asp-action="Details" asp-route-id="@producto.Id">Details</a>*@ |
                    <a asp-action="Delete" asp-route-id="@producto.Id">Delete</a>

                </div>
            </div>
        </div>
    }
</div>


