@model InDaBox.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

    <h3>Está seguro que quiere eliminar este elemento?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Imagen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagen)
        </dd>
        <dt class = "col-sm-2">
            Caducidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Caducidad)
        </dd>
        <dt class = "col-sm-2">
            Cantidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            Borrado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Borrado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrado" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
