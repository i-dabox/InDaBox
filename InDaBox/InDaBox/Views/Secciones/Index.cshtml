@model IEnumerable<InDaBox.Models.Seccion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreSeccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDeColumnas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDeFilas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pasillo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreSeccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeColumnas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeFilas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pasillo.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
